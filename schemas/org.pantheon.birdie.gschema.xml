<schemalist>
  <schema id="org.pantheon.birdie" path="/org/pantheon/birdie/" gettext-domain="birdie">

    <key name="token" type="s">
      <default l10n="messages">""</default>
      <summary>Token</summary>
      <description>
        Token
      </description>
    </key>

    <key name="token-secret" type="s">
      <default l10n="messages">""</default>
      <summary>Token secret</summary>
      <description>
        Token secret
      </description>
    </key>
    
    <key name="tweet-notification" type="b">
      <default>false</default>
      <summary>tweet-notification</summary>
      <description>
        Desktop notifications for new tweets
      </description>
    </key>
    
    <key name="mention-notification" type="b">
      <default>true</default>
      <summary>mention-notification</summary>
      <description>
        Desktop notifications for new mentions
      </description>
    </key>
    
    <key name="dm-notification" type="b">
      <default>true</default>
      <summary>dm-notification</summary>
      <description>
        Desktop notifications for new direct messages
      </description>
    </key>

    <key name="legacy-window" type="b">
      <default>false</default>
      <summary>legacy-window</summary>
      <description>
        Use the old window style
      </description>
    </key>

  </schema>
</schemalist>
