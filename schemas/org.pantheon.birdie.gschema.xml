<schemalist>
  <enum id="services">
    <value value="0" nick="twitter"/>
    <value value="1" nick="identica"/>
  </enum>

  <schema id="org.pantheon.birdie" path="/org/pantheon/birdie/" gettext-domain="birdie">

    <key name="token" type="s">
      <default l10n="messages">""</default>
      <summary>Token</summary>
      <description>
        Token
      </description>
    </key>

    <key name="token-secret" type="s">
      <default l10n="messages">""</default>
      <summary>Token secret</summary>
      <description>
        Token secret
      </description>
    </key>
    
    <key name="update-interval" type="i">
      <default>2</default>
      <summary>update-interval</summary>
      <description>
        Interval to fetch updates
      </description>
    </key>
    
    <key name="tweet-notification" type="b">
      <default>false</default>
      <summary>tweet-notification</summary>
      <description>
        Desktop notifications for new tweets
      </description>
    </key>
    
    <key name="mention-notification" type="b">
      <default>true</default>
      <summary>mention-notification</summary>
      <description>
        Desktop notifications for new mentions
      </description>
    </key>
    
    <key name="dm-notification" type="b">
      <default>true</default>
      <summary>dm-notification</summary>
      <description>
        Desktop notifications for new direct messages
      </description>
    </key>

    <key name="legacy-window" type="b">
      <default>true</default>
      <summary>legacy-window</summary>
      <description>
        Use the old window style
      </description>
    </key>

    <key name="window-width" type="i">
      <default>450</default>
      <summary>Window Width</summary>
      <description>Saves the window width for restoring it later.</description>
    </key>
    
    <key name="window-height" type="i">
      <default>600</default>
      <summary>Window Height</summary>
      <description>Saves the window height for restoring it later.</description>
    </key>
    
    <key name="opening-x" type="i">
      <default>-1</default>
      <summary>X position of window</summary>
      <description>Saves the window’s X position for restoring it later.</description>
    </key>
    
    <key name="opening-y" type="i">
      <default>-1</default>
      <summary>Y position of window</summary>
      <description>Saves the window’s Y position for restoring it later.</description>
    </key>

    <key name="compose-opening-x" type="i">
      <default>-1</default>
      <summary>X position of compose window</summary>
      <description>Saves the window’s X position for restoring it later.</description>
    </key>
    
    <key name="compose-opening-y" type="i">
      <default>-1</default>
      <summary>Y position of compose window</summary>
      <description>Saves the window’s Y position for restoring it later.</description>
    </key>

    <key name="service" enum="services">
      <default>'twitter'</default>
      <summary>Service to use</summary>
      <description>Determines which service API to use</description>
    </key>

    <key name="retrieve-count" type="s">
      <default>"20"</default>
      <summary>Retrieve count</summary>
      <description>Specifies the maximum number of records to retrieve in each update. Must be less than or equal to 200.</description>
    </key>

  </schema>
</schemalist>
